<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#C4C4C4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    android:padding="5dp"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/explore_profile_pic_border"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/profile_pic_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/explore_user_name_age"
        android:text="Lauren, 24"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/explore_profile_pic_border"
        app:layout_constraintTop_toTopOf="@id/explore_profile_pic_border" />

    <TextView
        android:id="@+id/explore_user_interests"
        android:text="Basketball, Cricket, Yoga, Baseball, Football"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"

        app:layout_constraintLeft_toLeftOf="@id/explore_user_name_age"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/explore_user_name_age"
        android:maxLines="2"
        android:ellipsize="end"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/explore_profile_picture"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@id/explore_profile_pic_border"
        app:layout_constraintEnd_toEndOf="@id/explore_profile_pic_border"
        app:layout_constraintLeft_toLeftOf="@id/explore_profile_pic_border"
        app:layout_constraintStart_toStartOf="@id/explore_profile_pic_border"
        app:layout_constraintTop_toTopOf="@id/explore_profile_pic_border" />


</android.support.constraint.ConstraintLayout>
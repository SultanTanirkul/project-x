<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCategory"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        >

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:background="@drawable/text_input_bg_search"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:hint="Search for your activity...." />

    <Button
        android:id="@+id/create_activity_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/category_create_activity"
        android:textColor="#fff"
        android:background="@drawable/create_activity_button"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_create_activity_hint"
        android:layout_gravity="center"/>

    </LinearLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:columnCount="2"
        app:rowCount="4"
        android:layout_weight="1"
        app:orientation="horizontal"
        android:padding="5dp">
        <Button
            android:id="@+id/activity_category_football"
            android:text="@string/category_football"
            app:layout_row="0"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>


        <Button
            android:id="@+id/activity_category_basketball"
            android:text="@string/category_basketball"
            app:layout_row="0"
            app:layout_column="1"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>

        <Button
            android:id="@+id/activity_category_tennis"
            android:text="@string/category_tennis"
            app:layout_row="1"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>

        <Button
            android:id="@+id/activity_category_cricket"
            android:text="@string/category_cricket"
            app:layout_row="1"
            app:layout_column="1"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>

        <Button
            android:id="@+id/activity_category_golf"
            android:text="@string/category_golf"
            app:layout_row="2"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>

        <Button
            android:id="@+id/activity_category_volleyball"
            android:text="@string/category_volleyball"
            app:layout_row="2"
            app:layout_column="1"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>

        <Button
            android:id="@+id/activity_category_swimming"
            android:text="@string/category_swimming"
            app:layout_row="3"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>
        <Button
            android:id="@+id/activity_category_other"
            android:text="@string/category_other"
            app:layout_row="3"
            app:layout_column="1"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>


    </android.support.v7.widget.GridLayout>

</LinearLayout>